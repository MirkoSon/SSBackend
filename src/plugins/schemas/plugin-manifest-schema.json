{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ssbackend.local/schemas/plugin-manifest.json",
  "title": "SSBackend Plugin Manifest",
  "description": "Schema for SSBackend plugin manifest definition",
  "type": "object",
  "required": ["name", "version", "description"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Plugin identifier (lowercase, alphanumeric, hyphens only)",
      "examples": ["economy", "my-custom-plugin", "game-analytics"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (MAJOR.MINOR.PATCH)",
      "examples": ["1.0.0", "2.3.1"]
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Brief description of the plugin (minimum 10 characters)"
    },
    "author": {
      "type": "string",
      "description": "Plugin author name or organization"
    },
    "ssbackend_version": {
      "type": "string",
      "description": "Compatible SSBackend version range (e.g., '^1.0.0')"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Array of plugin names this plugin depends on",
      "uniqueItems": true
    },
    "configSchema": {
      "type": "object",
      "description": "JSON Schema for plugin configuration validation"
    },
    "adminUI": {
      "type": "object",
      "description": "Admin dashboard UI configuration",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "navigation": {
          "type": "object",
          "properties": {
            "label": { "type": "string" },
            "icon": { "type": "string" },
            "group": { "type": "string" },
            "priority": { "type": "number" }
          }
        },
        "routes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string" },
              "title": { "type": "string" },
              "icon": { "type": "string" },
              "component": { "type": "string" },
              "permissions": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}
