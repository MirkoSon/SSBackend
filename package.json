{
  "name": "stupid-simple-backend",
  "version": "1.0.0",
  "description": "Stupid Simple Backend for game development with save/load, auth, and inventory systems",
  "main": "src/app.js",
  "bin": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build:exe": "npx pkg package.json --targets node18-win-x64 --output dist/ssbackend.exe",
    "build:bin": "npx pkg package.json --targets node18-linux-x64,node18-macos-x64 --output dist/ssbackend",
    "build:all": "npm run build:exe && npm run build:bin",
    "test:exe": "cd dist && .\\ssbackend.exe --help",
    "test:bin": "cd dist && ./ssbackend --help",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate"
  },
  "keywords": [
    "game",
    "backend",
    "simulator",
    "api",
    "sqlite"
  ],
  "author": "Game Developer",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "chokidar": "^5.0.0",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "pdfkit": "^0.17.2",
    "sqlite3": "^5.1.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "axios": "^1.12.2",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "src/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist/",
    "options": [
      "--compress=Brotli"
    ]
  }
}
